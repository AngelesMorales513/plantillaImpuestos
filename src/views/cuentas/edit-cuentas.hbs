<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/cuentas/edit-cuentas/{{notes._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="number" name="NumCuenta" class="form-control" placeholder="Numero de cuenta" value="{{note.NumCuenta}}">
                </div>
                <div class="form-group">
                    <input type="text" name="nombreCli" class="form-control" placeholder="Nombre cliente" value="{{note.nombreCli}}">
                </div>
                <div class="form-group">
                    <input type="text" name="banco" class="form-control" placeholder="Banco" value="{{note.banco}}">
                </div>
                <div class="form-group">
                    <input type="number" name="saldo" class="form-control" placeholder="Saldo" value="{{note.saldo}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>