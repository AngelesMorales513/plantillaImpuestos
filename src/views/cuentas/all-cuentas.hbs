<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card border-info mb-3">
                <div class="card-body ">
                    <h3 class="card-title d-flex justify-content-between align-items-center">
                         {{NumCuenta}} <a href="/cuentas/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h3>
                    <h5> 
                        {{nombreCli}}
                    </h5>
                    <h5>
                        {{banco}}
                    </h5>
                    <h5>
                        {{saldo}}
                    </h5>
                    <p>
                        {{description}}
                    </p>
                    <form action="/cuentas/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sn" type="submit">Eliminar</button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                
                <p class="lead">No hay cuentas insertadas.</p>
                <a href="/cuentas/add" class="btn btn-success btn-block">Crea una!</a>
            </div>
        </div>
    {{/each}}
</div>